	public static void dRect(int x1, int y1, int x2, int y2){
		BufferedImage img = new BufferedImage(1200, 800, BufferedImage.TYPE_INT_ARGB);
		Graphics g = img.getGraphics();
		g.drawRect(x1,y1,x2,y2);
	}
	
