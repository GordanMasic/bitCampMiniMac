package ba.bitcamp.shiftingAnArray.copy;

public class Task2 {

	
	public static void shift(char[] array){
//		char[] temp = new char[array.length];
		for (int i =  array.length-1; i > 0; i--) {
			array[i] = array[i-1];
		}
	}
	
	
	public static void main(String[] args) {
		char[] array = {'A','B','C','D'};
		System.out.println(array);
		
		shift(array);
		System.out.println(array);
		
	}
}
