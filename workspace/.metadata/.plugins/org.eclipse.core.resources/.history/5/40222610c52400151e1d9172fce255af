
public class DynamicDouble {

	private double myArray[];
	private int count;
	
	public DynamicDouble(){
		this(8);
	}
	
	public DynamicDouble(int n){
		this(n,0.0);
		count = 0;
		
	}
	public DynamicDouble(int n,double x){
		super();
		count = n;
		this.myArray = new double[n];
		for (int i = 0; i < n; i++) {
			myArray[i] = x;
		}
	}
}
