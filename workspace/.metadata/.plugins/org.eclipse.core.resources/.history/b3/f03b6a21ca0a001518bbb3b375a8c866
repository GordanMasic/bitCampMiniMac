
public class CheckGrammary {
	
	public static String fixSentence(String sentence){
		int l = sentence.length();
		String fixed = "";
		char c = sentence.charAt(0);
		c+=48;
		fixed += (String)(c + " ");
		return fixed;
		
		
		
		
	}

	public static void main(String[] args) {
		fixSentence(„sky is blue“);

	}

}
